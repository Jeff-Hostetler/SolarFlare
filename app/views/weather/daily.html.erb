<%= render 'form' %>
<% if (@user.address_zip != nil) || (@user.address_zip.lstrip.empty? == false) %>
  <div class="page-header">
    <h1>
      Your weather today
    </h1>
  </div>

  <div class = "col-sm-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Cloud Coverage</h3>
      </div>
      <div class="panel-body">
        <%= @forecast.cloud_cover %>%
      </div>
    </div>
  </div>

  <div class = "col-sm-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Percipitation Chance</h3>
      </div>
      <div class="panel-body">
        <%= @forecast.precipitation_probability %>%
      </div>
    </div>
  </div>

  <div class = "col-sm-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Sunrise/ Sunset Time</h3>
      </div>
      <div class="panel-body">
        <%= @forecast.sunrise_time %> AM / <%= @forecast.sunset_time %> PM
      </div>
    </div>
  </div>

 <div class = "col-sm-6">
   <div class="panel panel-default">
     <div class="panel-heading">
       <h3 class="panel-title">Max/ Min Temp (degrees F)</h3>
     </div>
     <div class="panel-body">
       <%= @forecast.temperature_max%>/ <%= @forecast.temperature_min %>
     </div>
   </div>
 </div>

 <p>
   Powered by Forecast.io
 </p>

 <% else %>
 <div class="jumbotron">
   <h3>You have not entered your address into our system. In order for sensor and
     weather information to display, you will need to add the address where your solar panels
     are located. </h3>
     <p>Please <%= link_to("edit your info", edit_user_path(@user)) %>. Also visit the
       <%= link_to "Tutorial", user_tutorial_path(@user) %> with help on getting started. </p>
   </div>

<% end %>
<%= render "form2" %>
