
  <%= render "weather/form" %>

  <% if @sensor !=nil  %>
  <input id="userInfo" type="hidden" value="<%= current_user.id %>">
  <h5>The last reading was taken at <%= @sensor.created_at.getlocal.strftime("%A, %B %d, %Y at %l%M%p") %></h3>
    <% data_column_chart = [["Light Level", @sensor.data_point]] %>

    <%= column_chart data_column_chart, min:0, max:1100 %>

  <% elsif @sensor == nil %>
  <div class="jumbotron">
    <h3>You have not entered your sensor port number into our system. In order for sensor information to display,
       you will need to add the sensor port number to collect light level readings. </h3>
      <p>Please <%= link_to("edit your info", edit_user_path(@user)) %>. Also visit the
      <%= link_to "Tutorial", user_tutorial_path(@user) %> with help on getting started. </p>
    </div>
  <% else %>
    <div class="jumbotron">
      <h3>You have not entered your address into our system. In order for sensor and
        weather information to display, you will need to add the address where your solar panels
        are located. </h3>
        <p>Please <%= link_to("edit your info", edit_user_path(@user)) %>. Also visit the
          <%= link_to "Tutorial", user_tutorial_path(@user) %> with help on getting started. </p>
    </div>
  <% end %>

