<div class="container">
  <div class="list-group">
    <h4 class="list-group-item-heading">We use this info along side data collected from
    your sensor to provide accurate analysis. Please update if needed.</h4>
    <h5 class="list-group-item-heading">Address</h5>
    <p class="list-group-item-text"><%= current_user.address_street_number %>
       <%= current_user.address_street %> <br> <%= current_user.address_city %>,
       <%= current_user.address_state %> <%= current_user.address_zip %>
       </p>
    </a>
  </div>

  <!-- migration to make text alert and email alert false by default -->

    <div class="list-group">
      <h4 class="list-group-item-heading">We use this info to send you alerts. Please
      update as needed </h4>
      <% if current_user.email_alert == true %>
        <h5 class="list-group-item-heading">Email</h5>
          <p class="list-group-item-text">
            <%= current_user.email %>
          </p>
      <% end %>
      <% if current_user.text_alert == true %>
        <h5 class="list-group-item-heading">Phone Number</h5>
        <% if current_user.phone_number != nil %>
          <p class="list-group-item-text">
            <%= current_user.phone_number %>
          </p>
        <% else %>
          <p class="list-group-item-text">
            We haven't recieved a phone number for you. Please edit your profile
            information <%= link_to("here", edit_user_path) %>
          </p>
        <% end %>
      <% end %>
        <p class="list-group-item-text">
        </p>
      </a>
    </div>
</div>
