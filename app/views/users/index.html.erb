<div class="page-header">
  <h1>SolarFlare
    <br>
    <small>
      Admin Interface
    </small>
  <h1>
</div>

<div class = "row">
  <div class = "col-sm-6">
    <table class="table table-striped">
      <thead>
      <th>
        User id
      </th>
      <th>
        User name
      </th>
      <th>
        User email
      </th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td>
          <%= user.id %>
        </td>
        <td>
          <%= link_to user.full_name, user %>
        </td>
        <td>
          <%= mail_to(user.email) %>
        </td>
      </tr>
      <% end %>
    </tbody>
    </table>
  </div>
</div>
