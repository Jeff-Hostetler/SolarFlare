<div class="page-header">
  <h1>SolarFlare
    <br>
    <small>
      Admin Interface
    </small>
  <h1>
</div>

<div class = "row">
  <div class = "col-sm-5">
    <h3>All Users</h3>
    <table class="table table-striped">
      <thead>
      <th>
        User id
      </th>
      <th>
        User name
      </th>
      <th>
        User email
      </th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td>
          <%= user.id %>
        </td>
        <td>
          <%= link_to user.full_name, user %>
        </td>
        <td>
          <%= mail_to(user.email) %>
        </td>
      </tr>
      <% end %>
    </tbody>
    </table>
  </div>

  <div class = "col-sm-1">

  </div>

  <div class = "col-sm-6">
    <h3>Pivotal Tracker for <%= @pivotal_project[:name] %></h3>
    <table class = "table table-striped">
      <thead>
        <th>
          Story name
        </th>
        <th>
          Status
        </th>
      </thead>
      <tbody>
        <% @pivotal_stories.reverse.each do |story| %>
        <tr>
          <td>
            <%= link_to story[:name], story[:url]%>
          </td>
          <td>
            <%= story[:current_state] %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
