<div class="container">
  <%= render 'form' %>
  <% if current_user.address_zip != nil %>
    <div class="page-header">
      <h1>
          <small>
            <%= weather_summary %>
          </small>
      </h1>
    </div>

    <div class = "col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Cloud Coverage</h3>
        </div>
        <div class="panel-body">
          <%= cloud_cover_now %>%
        </div>
      </div>
    </div>

    <div class = "col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Percipitation Chance</h3>
        </div>
        <div class="panel-body">
          <%= precipitation_probability %>%
        </div>
      </div>
    </div>

    <div class = "col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Sunrise/ Sunset Time</h3>
        </div>
        <div class="panel-body">
          <%= sunrise_time %> AM / <%= sunset_time %> PM
        </div>
      </div>
    </div>

   <div class = "col-sm-6">
     <div class="panel panel-default">
       <div class="panel-heading">
         <h3 class="panel-title">Max/ Min Temp (degrees F)</h3>
       </div>
       <div class="panel-body">
         <%= temperature_max%>/ <%= temperature_min %>
       </div>
     </div>
   </div>

  <% end %>




</div>
