<div class="container">
  <div class="col-sm-12">
    <div class="col-sm-offset-4 col-sm-4">
      <h1>Sign in</h1>

      <div class="well">

        <%= form_for(:session, url: login_path) do |f| %>
          <!-- <% if @login_error %>
          <div class="danger">
            <%= @login_error %>
          </div> -->
          <!-- <% end %> -->

          <div>
            <%= f.label :email %>
            <%= f.email_field :email, class:"form-control" %>
          </div>

          <div>
            <%= f.label :password %>
            <%= f.text_field :password, class:"form-control" %>
          </div>
          <br>
          <div>
            <%= f.submit "Log In", class:"btn btn-primary" %>
          </div>

        <%end %>

      </div>
      Not a registered yet? <%= link_to "Sign Up", new_user_path %>
    </div>
  </div>
</div>
